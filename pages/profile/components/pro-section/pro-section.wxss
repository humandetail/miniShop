/* pages/profile/components/pro-section/pro-section.wxss */
.pro-section {
  display: flex;
  margin: 20rpx 20rpx 0;
}

.pro-section .cart {
  position: relative;
  width: 40%;
  margin-right: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.pro-section .cart .title {
  font-size: 32rpx;
}

.pro-section .cart .number {
  font-size: 24rpx;
  color: #8c8c8c;
}

.pro-section .cart .bg {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 160rpx;
  height: 160rpx;
}

.pro-section .cart .bg image {
  width: 100%;
  height: 100%;
}

.pro-section .side {
  flex: 1;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.pro-section .side .item {
  display: flex;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
}

.pro-section .side .item + .item {
  border-top: 2rpx solid #f5f5f5;
}

.pro-section .side .item .title {
  flex: 1;
  font-size: 28rpx;
}

.pro-section .side .item .icon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #8c8c8c;
}

.pro-section .side .item .icon image {
  width: 30rpx;
  height: 30rpx;
}