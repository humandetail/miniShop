/* pages/cart/components/cart_list_item/cart_list_item.wxss */
.list-item {
  display: flex;
  min-width: 0;
  padding: 20rpx 0;
  border-top: 2rpx solid #f5f5f5;
}

.check-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80rpx;
}

.goods-image-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
}

.goods-image-box .goods-image {
  width: 160rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  margin: 0 20rpx;
}

.goods-info .goods-title {
  font-size: 28rpx;
  max-height: 60rpx;
  line-height: 30rpx;
  color: #2c2c2c;
  overflow: hidden;
}

.goods-info .goods-sku {
  width: 100%;
  height: 30rpx;
  color: #8c8c8c;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-side {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  width: 120rpx;
  margin-right: 20rpx;
}

.goods-side .goods-price {
  height: 60rpx;
}

.goods-side .goods-price .goods-now-price {
  font-size: 32rpx;
  color: #2c2c2c;
}

.goods-side .goods-price .goods-old-price {
  font-size: 24rpx;
  color: #8c8c8c;
  text-decoration: line-through;
}

.goods-side .remove-btn {
  width: 50rpx;
}