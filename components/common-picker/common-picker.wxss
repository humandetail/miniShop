/* components/common-picker/common-picker.wxss */
.picker-mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 14;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}

.picker-wrapper {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 15;
  width: 100%;
  height: 70%;
  background-color: #fff;
}

.picker-header {
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.close-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  z-index: 1;
  /* background-color: #abc; */
}

.picker-btn-group {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
}
